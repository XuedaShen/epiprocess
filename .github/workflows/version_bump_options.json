{
  "scheme": "semantic",
  "versionFile": "./DESCRIPTION",
  "files": [],
  "rules": [
    {
      "trigger": "commit",
      "branch": "dev",
      "bump": "build"
    },
    {
      "trigger": "commit",
      "bump": "minor",
      "branch": "main",
      "tag": true,
      "reset": "build"
    },
    {
      "trigger": "commit",
      "bump": "major",
      "branch": "release",
      "tag": true,
      "reset": ["minor", "build"]
    }
  ]
}
